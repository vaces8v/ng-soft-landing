generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  telegramChatId              String?  @unique
  telegramUsername            String?
  telegramLinkedAt            DateTime?
  telegramAuthCode            String?
  telegramAuthCodeExpiresAt   DateTime?
  notifyNewApplications       Boolean  @default(true)
  notifyJobApplications       Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Application {
  id        String   @id @default(cuid())
  name      String
  phone     String
  email     String
  company   String?
  message   String
  status    String   @default("new") // new, in_progress, completed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Vacancy {
  id               String            @id @default(cuid())
  title            String
  type             String
  location         String
  icon             String            @default("lucide:briefcase")
  description      String            @db.Text
  requirements     String[]
  status           String            @default("active") // active, closed
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  jobApplications  JobApplication[]

  @@index([status])
  @@index([createdAt])
  @@map("vacancies")
}

model JobApplication {
  id           String   @id @default(cuid())
  vacancyId    String
  vacancy      Vacancy  @relation(fields: [vacancyId], references: [id], onDelete: Cascade)
  name         String
  email        String
  phone        String
  resume       String?
  coverLetter  String   @db.Text
  status       String   @default("new") // new, reviewed, rejected, accepted
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([vacancyId])
  @@index([status])
  @@index([createdAt])
  @@map("job_applications")
}
